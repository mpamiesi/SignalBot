import ccxt
import json
import telegram
from telegram.ext import Updater
import websocket

# Enter your Telegram bot token and channel ID
TOKEN = 'YOUR_TELEGRAM_BOT_TOKEN'
CHAT_ID = 'YOUR_TELEGRAM_CHANNEL_ID'

# Create a Telegram bot object
bot = telegram.Bot(token=TOKEN)

# Create an Updater object for the bot
updater = Updater(token=TOKEN, use_context=True)

# Create a function that sends messages to the Telegram channel
def send_message(message):
    bot.send_message(chat_id=CHAT_ID, text=message)

# Create a function that receives alerts from TradingView
def on_message(ws, message):
    data = json.loads(message)
    if data['action'] == 'pushMessage':
        alert = data['message']['text']
        send_message(alert)

